@page "/Address/Delete/{Id:int}"

@layout NurseLayout

@inject NavigationManager NavigationManager
@inject AddressService Service

<h3>Delete Address</h3>
<br />
<div class="col-5">
    <div class="alert alert-danger">
        Do you want to delete this address?
    </div>
</div>
<div class="col-5">
    <table class="table table-hover">
        <tr>
            <td>Country: </td>
            <td>@address.Country</td>
        </tr>
        <tr>
            <td>City: </td>
            <td>@address.City</td>
        </tr>
        <tr>
            <td>Street Name: </td>
            <td>@address.StreetName</td>
        </tr>
        <tr>
            <td>Unit Number: </td>
            <td>@address.UnitNumber</td>
        </tr>
        <tr>
            <td>Building Number: </td>
            <td>@address.BuildingNumber</td>
        </tr>
        <tr>
            <td>Zip Code: </td>
            <td>@address.ZipCode</td>
        </tr>
    </table>
    <button type="submit" class="btn btn-danger" @onclick="RemoveAddress">Delete Address</button>
    &nbsp;&nbsp;
    <a href="/Address/List" class="btn btn-info" role="button">Cancel</a>
</div>

@code {

    Address address = new Address();

    [Parameter]
    public int Id { get; set; }

    private void RemoveAddress()
    {
        Service.DeleteAddress(Id);

        NavigationManager.NavigateTo("Address/List");
    }

    protected override void OnInitialized()
    {
        address = Service.GetAddress(Id);
    }

}